{
  "name": "advanced-dithering-tool-react",
  "version": "1.0.0",
  "description": "Advanced Dithering Tool - React Version",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run build:preload\" \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm run build:preload && vite build",
    "build:preload": "tsc src/main/preload.ts --outDir . --target ES2020 --module commonjs --esModuleInterop --skipLibCheck",
    "preview": "vite preview",
    "electron": "electron .",
    "start": "npm run dev",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "keywords": [
    "dithering",
    "image-processing",
    "electron",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "eslint": "^9.29.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.34.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.10",
    "@types/sharp": "^0.31.1",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.1.10",
    "zustand": "^5.0.5"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
